<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="La_Cafeteria2.LoginPage"
             Title="The Kiss Coffee's">

    <Grid>
        <Image Source="cofee1.jpeg"
               Aspect="AspectFill"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"/>
        <BoxView Color="#80000000"/>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">

            <StackLayout  VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Iniciar sesión" FontSize="26"  HorizontalOptions="Center"/>
                <Entry x:Name="EmailEntry"  Placeholder="Correo Electronico" TextColor="Black" BackgroundColor="FloralWhite" Keyboard="Email" Margin="0,10,0,10"/>
                <Entry x:Name="ContraseñaEntry" Placeholder="Contraseña" TextColor="Black" BackgroundColor="FloralWhite" IsPassword="True" Margin="0,10,0,10"/>
                <Button Text="Iniciar Sesion" BackgroundColor="BurlyWood" TextColor="Black" Clicked="Button_Clicked" Margin="0, 10, 0,30"/>
                <Button Text="Crear cuenta" BackgroundColor="Transparent" TextColor="White" FontSize="23" Clicked="Button_Clicked_1" Margin="0,10,0,0"/>
            </StackLayout>
        </StackLayout>
    </Grid>
    
</ContentPage>